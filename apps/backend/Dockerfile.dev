# Development Dockerfile for Backend with hot reload
FROM python:3.13-slim

WORKDIR /app

# Install system dependencies including git for GitHub dependencies
# and Playwright browser dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    git \
    postgresql-client \
    # Playwright dependencies
    libglib2.0-0 \
    libnss3 \
    libnspr4 \
    libdbus-1-3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libxkbcommon0 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster Python dependency management
RUN pip install uv

# Copy dependency files
COPY pyproject.toml uv.lock* ./

# Install Python dependencies
RUN uv sync

# Install Playwright browsers (chromium by default, you can add firefox/webkit if needed)
RUN uv run playwright install chromium

# Copy source code (this will be overridden by volume mount)
COPY . .

# Expose FastAPI port
EXPOSE 8000

# Set environment variable to indicate we're running in Docker
ENV DOCKER_CONTAINER=true

# Start development server with hot reload
CMD ["uv", "run", "python", "main.py"]