# LiteLLM Configuration
LITELLM_API_KEY=your_api_key_here
LITELLM_BASE_URL=http://localhost:4000

# Database Configuration
# For async operations with asyncpg
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/resume_genius

# For sync operations (Alembic migrations)
DATABASE_SYNC_URL=postgresql://username:password@localhost:5432/resume_genius

# Database settings
DATABASE_ECHO=false

# Authentication Configuration
AUTH_JWT_SECRET_KEY=your-secret-key-here-change-in-production
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7
AUTH_PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
AUTH_EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=48