# Resume Genius Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# LiteLLM Configuration
# ============================================================================
LITELLM_MASTER_KEY=sk-your-secure-master-key-here  # Generate with: openssl rand -hex 32
LITELLM_API_KEY=sk-your-litellm-api-key  # For backend to access LiteLLM

# LiteLLM Database Configuration
LITELLM_POSTGRES_USER=postgres
LITELLM_POSTGRES_PASSWORD=your-secure-password-here  # CHANGE THIS
LITELLM_POSTGRES_DB=litellm
LITELLM_POSTGRES_HOST_DOCKER=litellm-postgres
LITELLM_POSTGRES_HOST_LOCAL=localhost
LITELLM_POSTGRES_PORT_DOCKER=5432
LITELLM_POSTGRES_PORT_LOCAL=5440

# LiteLLM Service URLs
LITELLM_BASE_URL_DOCKER=http://litellm:4000
LITELLM_BASE_URL_LOCAL=http://localhost:4000


# ============================================================================
# Langfuse Configuration
# ============================================================================
LANGFUSE_SECRET_KEY=sk-secret-key
LANGFUSE_PUBLIC_KEY=pk-public-key
LANGFUSE_HOST=url


# ============================================================================
# Backend Configuration
# ============================================================================

# Backend Database Configuration
BACKEND_POSTGRES_USER=postgres
BACKEND_POSTGRES_PASSWORD=your-secure-password-here  # CHANGE THIS
BACKEND_POSTGRES_DB=resume_genius
BACKEND_POSTGRES_HOST_DOCKER=resume-genius-postgres
BACKEND_POSTGRES_HOST_LOCAL=localhost
BACKEND_POSTGRES_PORT_DOCKER=5432
BACKEND_POSTGRES_PORT_LOCAL=5441

# Database URLs are now auto-constructed from the above configuration
# No need to manually set BACKEND_DATABASE_URL_* variables
BACKEND_DATABASE_ECHO=false

# Backend Authentication Settings
BACKEND_JWT_SECRET_KEY=your-jwt-secret-key-here  # Generate with: openssl rand -hex 32
BACKEND_JWT_ALGORITHM=HS256
BACKEND_ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_REFRESH_TOKEN_EXPIRE_DAYS=7
BACKEND_PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
BACKEND_EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=48

# Backend Redis Configuration
BACKEND_REDIS_HOST_DOCKER=resume-genius-redis
BACKEND_REDIS_HOST_LOCAL=localhost
BACKEND_REDIS_PORT_DOCKER=6379
BACKEND_REDIS_PORT_LOCAL=6380
BACKEND_REDIS_DB=0
BACKEND_REDIS_MAX_CONNECTIONS=50
BACKEND_REDIS_ENCODING=utf-8
BACKEND_REDIS_DECODE_RESPONSES=true
BACKEND_REDIS_SOCKET_CONNECT_TIMEOUT=5
BACKEND_REDIS_SOCKET_TIMEOUT=5
BACKEND_REDIS_RETRY_ON_TIMEOUT=true
BACKEND_REDIS_HEALTH_CHECK_INTERVAL=30

# Backend Application Settings
BACKEND_LOG_LEVEL=info  # Options: debug, info, warning, error
PYTHONUNBUFFERED=1

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_API_URL_LOCAL=http://localhost:8000
FRONTEND_API_URL_DOCKER=http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# LLM Provider API Keys (Used by LiteLLM)
# ============================================================================
# Add your API keys for the providers you want to use
# Get these from the respective provider dashboards
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GROQ_API_KEY=gsk_your-groq-api-key
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
GEMINI_API_KEY=your-gemini-api-key
PERPLEXITYAI_API_KEY=pplx-your-perplexity-api-key
XAI_API_KEY=xai-your-xai-api-key

# ============================================================================
# Docker Settings (optional)
# ============================================================================
# COMPOSE_PROJECT_NAME=resume-genius
# DOCKER_BUILDKIT=1