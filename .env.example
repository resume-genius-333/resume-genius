# Resume Genius Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# LiteLLM Configuration
# ============================================================================
LITELLM_MASTER_KEY=sk-1234  # CHANGE THIS to a secure key in production
LITELLM_API_KEY=sk-1234      # Should match LITELLM_MASTER_KEY for local dev

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL for LiteLLM
POSTGRES_PASSWORD=postgres  # CHANGE THIS in production

# PostgreSQL for Resume Genius
RESUME_GENIUS_POSTGRES_PASSWORD=postgres  # CHANGE THIS in production

# Database URLs (usually don't need to change these for local dev)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5441/resume_genius
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5441/resume_genius
DATABASE_ECHO=false

# ============================================================================
# LLM Provider API Keys
# ============================================================================
# Add your API keys for the providers you want to use
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
DEEPSEEK_API_KEY=
GEMINI_API_KEY=

# ============================================================================
# Application Settings
# ============================================================================
# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend
PYTHONUNBUFFERED=1
LOG_LEVEL=info  # Options: debug, info, warning, error

# ============================================================================
# Docker Settings (optional)
# ============================================================================
# Uncomment to customize Docker behavior
# COMPOSE_PROJECT_NAME=resume-genius
# DOCKER_BUILDKIT=1